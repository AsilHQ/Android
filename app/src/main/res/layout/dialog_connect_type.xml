<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_dialog"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/kahf_guard_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@null">
    </ImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_connect_type_title"
        android:layout_marginStart="@dimen/spacing_dialog"
        android:fontFamily="@font/poppins_bold"
        android:textSize="@dimen/font_dialog_title"
        app:layout_constraintStart_toEndOf="@id/logo"
        app:layout_constraintTop_toTopOf="parent"
        >
    </TextView>

    <com.google.android.material.button.MaterialButton
        android:tag="@string/connect_type_vpn"
        android:id="@+id/button_connect_type_vpn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_connect_type_vpn"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:textSize="@dimen/font_dialog_text"
        app:icon="@drawable/arrow_right"
        app:iconSize="30dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="@dimen/spacing_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"
        style="@style/DialogButtonSimple"
        />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_connect_type_vpn"
        />


    <com.google.android.material.button.MaterialButton
        android:tag="@string/connect_type_private_dns"
        android:id="@+id/button_connect_type_private_dns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_connect_type_private_dns"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        app:iconTint="@color/black"
        android:textSize="@dimen/font_dialog_text"
        app:icon="@drawable/arrow_right"
        app:iconSize="30dp"
        android:layout_marginStart="-10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        style="@style/DialogButtonSimple"
        />
</androidx.constraintlayout.widget.ConstraintLayout>