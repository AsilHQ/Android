<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_kahf"
    android:id="@+id/container_view">

    <ScrollView
        android:id="@+id/prayers_page_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/prayerBackground"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="@drawable/prayer_times_page_banner"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="15dp">

                <ImageButton
                    android:id="@+id/btnSettings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackground"
                    android:importantForAccessibility="no"
                    android:padding="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_settings_filled"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="?attr/daxColorPrimaryInvertedText" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="35dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kahf_running_prayer"
                        android:textColor="?attr/daxColorPrimaryInvertedText"
                        android:fontFamily="@font/inter"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/banner_prayer_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Isha"
                        android:textColor="?attr/daxColorPrimaryInvertedText"
                        android:fontFamily="@font/inter"
                        android:textSize="36sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/banner_remaining_time_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2 hours 43 minutes until Fajr"
                        android:fontFamily="@font/inter"
                        android:textColor="?attr/daxColorPrimaryInvertedText"
                        android:textSize="11sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/date_info_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:gravity="center"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/prayer_day_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="?attr/daxColorPrimaryInvertedText"
                    android:fontFamily="@font/inter"
                    android:textStyle="bold"
                    tools:text="Today"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.duckduckgo.common.ui.view.button.IconButton
                        android:id="@+id/go_yesterday_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/chevron_left_24"
                        android:padding="5dp"
                        android:tint="@color/black36"
                        android:background="?selectableItemBackground"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/prayer_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#3e8dff"
                            android:textStyle="bold"
                            tools:text="Dhaka | 15 June 2023" />

                        <TextView
                            android:id="@+id/address_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="?attr/daxColorPrimaryInvertedText"
                            android:fontFamily="@font/inter"
                            tools:text="Dgy Al-Qlâ€™dah 30, 1444 AH" />

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/go_tomorrow_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?selectableItemBackground"
                        android:tint="@color/black36"
                        android:padding="5dp"
                        app:srcCompat="@drawable/chevron_right_24"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/prayers_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:showDividers="middle"/>

        </LinearLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>